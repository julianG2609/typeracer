<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="parent" stylesheets="@TypeRacerServer.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="serverui.controller.QuitController">
    <children>
        <HBox styleClass="appbar">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Quit Server" />
                <Pane HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
        <HBox alignment="BOTTOM_LEFT" spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
            <Pane HBox.hgrow="ALWAYS" />
                <VBox spacing="20.0">
                    <children>
                        <Pane VBox.vgrow="ALWAYS" />
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Are you sure you want to exit the TypeRacer Server?" />
                            <HBox spacing="20.0">
                                <children>
                                    <Pane HBox.hgrow="ALWAYS" />
                                    <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onConfirmButton" text="Yes" />
                                    <Button alignment="TOP_LEFT" cancelButton="true" mnemonicParsing="false" onAction="#onCancelButton" text="Cancel" />
                                    <Pane HBox.hgrow="ALWAYS" />
                                </children>
                            </HBox>
                        <Pane VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
            <Pane HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </children>
</VBox>

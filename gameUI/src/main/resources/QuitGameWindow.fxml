<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox fx:id="parent" stylesheets="@TypeRacer.css" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.QuitView">
    <children>
        <HBox spacing="20.0" styleClass="appbar">
            <children>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="appbar-title" text="Quit game"
                      textAlignment="CENTER"/>
                <Pane HBox.hgrow="ALWAYS"/>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </HBox>
        <HBox alignment="BOTTOM_LEFT" spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
                <Pane HBox.hgrow="ALWAYS"/>
                <VBox spacing="20.0">
                    <children>
                        <Pane VBox.vgrow="ALWAYS"/>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Are you sure you want to exit the game?"/>
                        <HBox spacing="20.0">
                            <children>
                                <Pane HBox.hgrow="ALWAYS"/>
                                <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onConfirmButton"
                                        text="Yes"/>
                                <Button alignment="TOP_LEFT" cancelButton="true" mnemonicParsing="false"
                                        onAction="#onCancelButton" text="Cancel"/>
                                <Pane HBox.hgrow="ALWAYS"/>
                            </children>
                        </HBox>
                        <Pane VBox.vgrow="ALWAYS"/>
                    </children>
                </VBox>
                <Pane HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
    </children>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="parent" stylesheets="@TypeRacer.css" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.SettingsView">
    <children>
        <HBox spacing="20.0" styleClass="appbar">
            <children>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="appbar-title" text="Settings"
                      textAlignment="CENTER"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button mnemonicParsing="false" onAction="#onBackButton" styleClass="appbar-button" text="Back"
                        textFill="WHITE"/>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </HBox>
        <Pane VBox.vgrow="ALWAYS"/>
        <HBox alignment="BOTTOM_LEFT" spacing="20.0">
            <padding>
                <Insets bottom="20.0" top="20.0"/>
            </padding>
            <children>
                <Pane HBox.hgrow="ALWAYS"/>
                <VBox spacing="20.0">
                    <children>
                        <CheckBox fx:id="darkmode" mnemonicParsing="false" onAction="#onDarkModeSelect"
                                  text="Dark Mode">
                            <VBox.margin>
                                <Insets bottom="5.0"/>
                            </VBox.margin>
                        </CheckBox>
                        <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onConfirmButton"
                                text="Confirm Changes"/>
                    </children>
                </VBox>
                <Pane layoutX="30.0" layoutY="30.0" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <Pane VBox.vgrow="ALWAYS"/>
    </children>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox stylesheets="@TypeRacer.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="view.GameOverView">
    <children>
        <HBox spacing="20.0" styleClass="appbar">
            <children>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="appbar-title" text="Race finished"
                      textAlignment="CENTER"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button layoutX="269.0" layoutY="30.0" mnemonicParsing="false" onAction="#onQuitButton"
                        styleClass="appbar-button" text="Quit"/>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </HBox>
        <HBox VBox.vgrow="ALWAYS">
            <children>
                <Pane HBox.hgrow="ALWAYS"/>
                <VBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Text fx:id="placement" strokeType="OUTSIDE" strokeWidth="0.0"
                              text="Player1, you finished in 1st place!">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </Text>
                        <HBox alignment="BOTTOM_LEFT" spacing="20.0">
                            <children>
                                <VBox spacing="20.0">
                                    <children>
                                        <Text fx:id="wpm" layoutX="10.0" layoutY="48.0" strokeType="OUTSIDE"
                                              strokeWidth="0.0" text="Your average speed was: 78 WPM"
                                              wrappingWidth="158.0"/>
                                    </children>
                                </VBox>
                                <Pane HBox.hgrow="ALWAYS"/>
                                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                                        onAction="#onMenuButton" text="Return to Menu" textAlignment="CENTER">
                                    <font>
                                        <Font size="17.0"/>
                                    </font>
                                    <opaqueInsets>
                                        <Insets/>
                                    </opaqueInsets>
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                </VBox>
                <Pane layoutX="10.0" layoutY="10.0" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
    </children>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox stylesheets="@TypeRacer.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="view.ConnectView">
    <children>
        <HBox spacing="20.0" styleClass="appbar">
            <children>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="appbar-title"
                      text="Connect to Server" textAlignment="CENTER"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button mnemonicParsing="false" onAction="#onQuitButton" styleClass="appbar-button" text="Quit"
                        textFill="WHITE"/>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </HBox>
        <Pane VBox.vgrow="ALWAYS"/>
        <HBox alignment="BOTTOM_LEFT" spacing="20.0">
            <children>
                <Pane HBox.hgrow="ALWAYS" />
            <VBox spacing="20.0">
               <children>
                  <HBox alignment="BOTTOM_RIGHT" spacing="20.0">
                     <children>
                            <VBox spacing="10.0">
                                <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0"
                                          text="Enter the IP Address of the Server" />
                                    <TextField fx:id="ip" text="127.0.0.1" />
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0"
                                          text="Enter the Port of the Server" />
                                    <TextField fx:id="port" promptText="1234" />
                                </children>
                            </VBox>
                            <Button fx:id="connect" alignment="TOP_LEFT" mnemonicParsing="false"
                                    onAction="#onConnectButton" text="Connect" />
                     </children>
                  </HBox>
                        <Text fx:id="error" styleClass="error" strokeType="OUTSIDE" strokeWidth="0.0"
                              text="Unable to establish connection." />
               </children>
            </VBox>
                <Pane HBox.hgrow="ALWAYS" />
            </children>
            <padding>
                <Insets bottom="20.0" top="20.0"/>
            </padding>
        </HBox>
        <Pane layoutX="10.0" layoutY="83.0" VBox.vgrow="ALWAYS"/>
    </children>
</VBox>
